{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "es2015"],
        "outDir": "./lib/cjs/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "baseUrl": "src",
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "lib"]
  }